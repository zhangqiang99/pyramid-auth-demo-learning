{% extends "base.html" %}

{% block content %}

	<div class="unit-centered unit-60">
		<div class="units-row">
				{% if message %}
					<div class="tools-alert tools-alert-red">
						<p>{{message}}</p>				
					</div>	
				{% else %}
					
				{% endif %}
		</div>	
	

        
        
		<form method="post" action="{{url}}" class="forms">
		
			<input type="hidden" name="came_from" value="{{came_from}}"/>

			<label>
				Login
				<input type="text" name="login"  value="{{login}}" class="width-50" />
			</label>
			<label>
				Password
				<input type="password" name="password" value="{{password}}" class="width-50" />
			</label>
								
			<p>
				<button class="btn-blue" name="form.submitted">Log in</button>
			</p>
		</form>        
        
	</div>


{% endblock %}
